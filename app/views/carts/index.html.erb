<div class="row">
    <div class="col-md-12">
        <h1>购物车</h1>
        <br/><br/>
        <%= link_to("清空购物车", clean_carts_path, method: :delete, class: "btn btn-warning pull-right")%>
        <br/><br/>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2">商品资讯</th>
                    <th>单价</th>
                    <th>数量</th>
                </tr>
            </thead>
            <tbody>
                <% current_cart.cart_items.each do |cart_item| %>
                <tr>
                    <td>
                        <% if cart_item.product.image.present? %>
                        <%= image_tag(cart_item.product.image.thumb.url, class:"thumbnail")%>
                    <% else %>
                        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
                        <% end %>
                    </td>
                    <td><%= cart_item.product.title %></td>
                    <td><%= cart_item.product.price %></td>
                    <td><%= cart_item.quantity %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div class="pull-right">
            总计<%= render_cart_total_price(current_cart)%>RMB
        </div>
        <br/>
        <hr/>
        <%= link_to("确认结账", '#', class:"btn btn-danger pull-right")%>
    </div>
</div>
